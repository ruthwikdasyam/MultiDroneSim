<mujoco model="seesaw_with_cubes">
  <option integrator="RK4" density="1.225" viscosity="1.8e-5"/>

  <compiler inertiafromgeom="true" meshdir="assets" autolimits="true"/>

  <worldbody>
    <!-- Ground plane -->
    <!-- <geom type="plane" size="2 2 0.1" rgba="0.9 0.9 0.9 1"/> -->
    
    <!-- See-saw base (pivot point) -->
    <body name="seesaw_base" pos="0.25 0 0.05">
      <freejoint />
      <geom type="box" size="0.05 0.05 0.01" rgba="0.2 0.2 0.2 1"/>
    </body>

    <!-- See-saw plank -->
    <body name="seesaw_plank" pos="0 0 0.05">
      <freejoint />
      <inertial pos="0 0 0" mass="0.1" diaginertia="1e-4 1e-4 1e-4"/>
      <geom type="box" size="0.5 0.05 0.02" rgba="0.6 0.4 0.2 1" friction="3 0.01 0.05"/>
    </body>

    <!-- Left Ball -->
    <body name="left_ball" pos="0 0 1"> <!-- Adjusted initial position -->
      <freejoint />
      <inertial pos="0 0 0" mass="0.05" diaginertia="1e-5 1e-5 1e-5"/>
      <geom type="sphere" size="0.05" rgba="0.75 0.75 0.75 1" friction="2 0.01 0.5"/>
    </body>
  </worldbody>

  <!-- Actuator to control the hinge joint -->
  <!-- <actuator>
    <motor joint="seesaw_hinge" ctrlrange="-0.161 0.161" gear="0.0002"/>
  </actuator> -->
</mujoco>
